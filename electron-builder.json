{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.zthundy.streamalerts",
  "asar": true,
  "productName": "Stream Alerts",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "mac": {
    "artifactName": "Sound-App-Setup.${ext}",
    "target": [
      "dmg",
      "zip"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "portable"
    ],
    "artifactName": "Sound-App-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "publish": [
    {
      "provider": "github",
      "private": true,
      "owner": "zThundy",
      "repo": "SoundApp",
      "releaseType": "release"
    }
  ],
  "portable": {
    "artifactName": "Sound-App-Portable.${ext}"
  }
}